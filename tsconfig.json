{
	"compilerOptions": {
	  	"strict": true,
		"target": "ES6",
		"module": "preserve",
		"outDir": "dist",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,    
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames":true,
	  	"resolveJsonModule": true
	},
	"include": [
		  "src/**/*.ts"
	  ],
	  "exclude": [
		  "src/tests/**"
	  ]
  }
  